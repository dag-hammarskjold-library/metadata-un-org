<!DOCTYPE html>
<html lang="en"> 
 <head>
     <meta charset="utf-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <meta name="description" content="">
     <meta name="author" content="">
     <!-- <link rel="icon" href="../../favicon.ico"> -->
 
     <title>UN Thesaurus</title>
     <link rel="shortcut icon" href="{{ url_for('static', filename='img/favicon.ico') }}" filename="favicon.ico">

     <!-- Roboto Font -->
      <link href="https://fonts.googleapis.com/css?family=Roboto:500,700" rel="stylesheet"> 
 
     <!-- Bootstrap core CSS -->
     <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" type="text/css">

     <!-- url-search-params-polyfill -->
     <script type="application/javascript" src="{{ url_for('static', filename='js/url_search_params_polyfill.js') }}"> </script>

     <!-- popper.js -->
     <script src="{{ url_for('static', filename='js/popper.js') }}" type="application/javascript"></script>
     
     <!-- jQueryUI css -->
     <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

     <!-- Local Custom styles for this template -->
     <link href="{{ url_for('static', filename='css/style.css') }}" rel="stylesheet" type="text/css">
     <!-- Hosted Style -->
     <!-- <link rel="stylesheet" type="text/css" href="https://s3.amazonaws.com/zappa-j2ith0vcq/style.css"> -->
 
    <!-- jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.js"></script>

    <!-- jQuery UI -->
    <script
        src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <!-- Bootstrap JS -->
    <script type="application/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"> </script>

    <script type=application/javascript>
        $SCRIPT_ROOT = {{ request.script_root|tojson|safe }};
    </script>

    <!-- local index.js -->
    <script type="application/javascript" src="{{ url_for('static', filename='js/index.js') }}"> </script>
 
  </head>
  {% if lang == 'ar' %}
    {% set direction = "rtl" -%}
    {% set margin = "mr-auto" -%}
  {% else %}
    {% set direction = "ltr" -%}
    {% set margin = "ml-auto" -%}
  {% endif %}
  <body dir="{{direction}}">
    <nav class="navbar navbar-expand-lg navbar-light bg-light align-bottom">
        <a href="{{ url_for('index', lang=lang) }}">
          {% if lang == 'en' %}
          <img src="https://library.un.org/sites/library.un.org/themes/bootstrap_library/images/logo.svg" style="width:390px;">
          {% elif lang == 'zh' %}
          <img src="https://library.un.org/sites/library.un.org/themes/bootstrap_library/images/logo-ch.svg" style="width:390px;">
          {% else %}
          <img src="https://library.un.org/sites/library.un.org/themes/bootstrap_library/images/logo-{{ lang }}.svg" style="width:390px;">
          {% endif %}
        </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarToggler">
        <ul class="navbar-nav {{margin}}">
          <li class="nav-item"><a id="ar" class="nav-link lang" href="#">ﺎﻠﻋﺮﺒﻳﺓ</a></li>
          <li class="nav-item"><a id="zh" class="nav-link lang" href="#">中文</a></li>
          <li class="nav-item"><a id="en" class="nav-link lang" href="#">English</a></li>
          <li class="nav-item"><a id="fr" class="nav-link lang" href="#">Français</a></li>
          <li class="nav-item"><a id="ru" class="nav-link lang" href="#">Русский</a></li>
          <li class="nav-item"><a id="es" class="nav-link lang" href="#">Español</a></li>
        </ul>
      </div>
    </nav>
    {% block content %}

    {% endblock %}
    <hr>
    <nav class="navbar navbar-expand-lg navbar-light">
      <span class="mr-auto"><img src="{{url_for('static', filename='img/un-logo-footer.png')}}"></span>
      <a class="navbar-brand un-brand" href="http://www.un.org" title="Home" alt="Home"><span class="site-name">{{_('United Nations')}}</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#footerToggler" aria-controls="footerToggler" aria-expanded="false" aria-label="Toggle footer">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="footerToggler">
        <ul class="navbar-nav {{margin}}">
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/contactus/" target="_blank">{{_('Contact')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="/root?lang={{lang}}&base_uri=http://metadata.un.org/thesaurus&uri_anchor=00">{{_('About')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/aboutun/copyright/" target="_blank">{{_('Copyright')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/aboutun/fraudalert/" target="_blank">{{_('Fraud Alert')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/aboutun/privacy/" target="_blank">{{_('Privacy Notice')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/siteindex/" target="_blank">{{_('A-Z Site Index')}}</a></li>
          <li class="nav-item"><a class="nav-link" href="//www.un.org/en/aboutun/terms/" target="_blank">{{_('Terms of Use')}}</a></li>
        </ul>
      </div>
    </nav>
  </body>
</html>
